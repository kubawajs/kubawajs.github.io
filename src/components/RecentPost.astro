---
import type { CollectionEntry } from 'astro:content';
import { Picture } from '@astrojs/image/components';
import Icon from './Icon.astro';

interface Props {
	project: CollectionEntry<'blog'>;
}

const { data, slug } = Astro.props.project;
const derivatives = [250, 350, 450];
---

<div class="blogCard">
	<a href={`/blog/${slug}`} title={data.title}>
		{data.img && <Picture src={data.img} widths={derivatives} alt={data.img_alt} aspectRatio="3:2" formats={['webp']} />}
		<h3 set:html={data.title}></h3>
		<p set:html={data.description}></p>
		<span class="readMore">Read more <Icon icon="arrow-right" /></span>
	</a>
</div>

<style>
	.blogCard a {
		padding: 1rem;
		display: table-cell;
		grid-template: auto 1fr / auto 1fr;
		height: 11rem;
		overflow: hidden;
		color: var(--gray-200);
		font-family: var(--font-brand);
		font-size: var(--text-md);
		font-weight: 300;
		transition: box-shadow var(--theme-transition);
		text-decoration: none;
	}

	.blogCard:hover {
		opacity: 80%;
	}

	.blogCard h3 {
		font-size: var(--text-lg);
		padding: 0.5rem;
	}

	.blogCard p {
		color: var(--gray-200);
		font-size: var(--text-sm);
		padding: 0.5rem;
		padding-bottom: 1rem;
	}

	.readMore {
		padding: 0.5rem;
		color: var(--accent-light);
		font-weight: 700;
	}

	.blogCard:hover .readMore {
		color: var(--accent-dark);
	}
</style>
